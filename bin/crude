#!/usr/bin/env node

const pg = require('commander');

pg.version('0.0.1', '-v, --version');

// help 命令
pg
  .command('help')
  .description('使用帮助')
  .action(()=>pg.outputHelp());

pg
  .command('create [dir]')
  .description('初始化项目')
  .action(dir=>console.log('create %s', dir));

pg
  .command('start [dir]')
  .description('开始写作')
  .action(require('../lib/script_start'))

pg
  .command('build [dir]')
  .description('生成网站')
  .option('-o, --output <dir>', '输出目录')
  .action((dir, options)=>require('../lib/script_build'))

pg.parse(process.argv);
